{
  // üé® UI
  "ui_font_family": ".ZedSans",
  "ui_font_size": 15,
  "ui_font_weight": 400,

  // üìÑ EDITOR APPEARANCE
  "buffer_font_family": "IntoneMono Nerd Font",
  "buffer_font_size": 16,
  "buffer_font_weight": 400,
  "buffer_line_height": "comfortable",
  "current_line_highlight": "line",
  "cursor_blink": true,
  "cursor_shape": "bar",
  "relative_line_numbers": "disabled",
  "preferred_line_length": 100,
  "show_wrap_guides": true,
  "wrap_guides": [80, 120],
  "show_whitespaces": "selection",
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware",
    "active_line_width": 2,
  },
  "gutter": {
    "line_numbers": true,
    "folds": true,
    "breakpoints": true,
  },
  "selection_highlight": true,
  "hide_mouse": "on_typing_and_movement",
  "scroll_beyond_last_line": "off",
  "horizontal_scroll_margin": 5,
  "vertical_scroll_margin": 3,
  "unnecessary_code_fade": 0.2,

  // üß≠ LAYOUT & PANELS
  "title_bar": {
    "show_branch_icon": true,
    "show_branch_name": true,
    "show_project_items": true,
    "show_user_picture": false,
    "show_menus": false,
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true,
    "code_actions": false,
  },
  "status_bar": {
    "active_language_button": true,
    "cursor_position_button": true,
    "line_endings_button": false,
  },
  "tab_bar": {
    "show": true,
    "show_tab_bar_buttons": true,
  },
  "tabs": {
    "file_icons": true,
  },
  "minimap": {
    "show": "never",
  },
  "scrollbar": {
    "show": "auto",
    "git_diff": true,
    "diagnostics": "error",
    "selected_text": true,
  },
  "project_panel": {
    "button": true,
    "dock": "left",
    "default_width": 260,
    "file_icons": true,
    "folder_icons": true,
    "auto_reveal_entries": true,
    "scrollbar": {
      "show": "auto",
    },
    "indent_guides": {
      "show": "always",
    },
    "hide_root": false,
    "hide_hidden": false,
  },
  "git_panel": {
    "button": true,
    "dock": "right",
    "default_width": 320,
    "status_style": "icon",
  },
  "collaboration_panel": {
    "button": false,
    "dock": "left",
  },

  // üß† CODE INTELLIGENCE / LSP (RESTRAINED)
  "global_lsp_settings": {
    "button": true,
  },
  "inlay_hints": {
    "enabled": true,
    "edit_debounce_ms": 500,
    "scroll_debounce_ms": 50,
    "show_background": false,
    "show_parameter_hints": true,
    "show_type_hints": false,
  },
  "lsp_document_colors": "inlay",
  "diagnostics": {
    "button": true,
  },
  "diagnostics_max_severity": null,

  // üêô GIT / COLLABORATION
  "git": {
    "hunk_style": "staged_hollow",
    "inline_blame": {
      "enabled": false,
    },
  },

  // üß© TERMINAL
  "terminal": {
    "button": true,
    "dock": "bottom",
    "font_family": "IntoneMono Nerd Font",
    "font_size": 14,
    "line_height": "comfortable",
    "cursor_shape": "block",
    "blinking": "terminal_controlled",
    "max_scroll_history_lines": 10000,
    "scrollbar": {
      "show": "auto",
    },
  },

  // ‚öôÔ∏è FILES & BEHAVIOR
  "max_tabs": 15,
  "file_finder": {
    "file_icons": true,
    "git_status": true,
  },
  "scroll_sensitivity": 1.2,
  "fast_scroll_sensitivity": 4.8,
  "auto_signature_help": false,
  "edit_predictions": {
    "enabled_in_text_threads": false,
    "mode": "subtle",
  },

  // üß† QUALITY OF LIFE
  "snippet_sort_order": "inline",
  "active_pane_modifiers": {
    "border_size": 1.0,
    "inactive_opacity": 0.85,
  },
}
