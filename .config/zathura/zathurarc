# Theme
include catppuccin-latte

# UI
set statusbar false
set inputbar false
set notification-timeout 300
set page-padding 10
set page-spacing 8
set window-title-basename true

# Layout & Zoom
set page-layout continuous
set zoom-fit-mode width
set zoom-min 10
set zoom-max 500
set zoom-step 10

# Behavior
set selection-clipboard clipboard
set adjust-open full
set first-page-column 1:1
set scroll-step 50
set smooth-scroll true
set recolor true
set link-hadjust true
set synctex false

# Printing
set print-command "lp -o media=A4 %f"

# Keybindings
map j scroll down
map k scroll up
map h scroll left
map l scroll right
map d scroll-page-down
map u scroll-page-up
map <Space> scroll-page-down
map <Shift+Space> scroll-page-up
map gg goto 1
map G goto 0
map + zoom in
map - zoom out
map = zoom fit-width
map / zoom in
map ? zoom out
map r reload
map q quit
map F fullscreen
map n navigate next
map p navigate previous
map <C-f> feedkeys /
